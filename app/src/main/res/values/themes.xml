<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AGRIChain" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.AGRIChain" parent="Base.Theme.AGRIChain" />
    <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color_dark_ui</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="customRounded4Corner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="AddItemCardViewSetting" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/customRounded4Corner</item>
    </style>

    <style name="toolbarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>
    <style name="Style_TextView">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="TextInputEditTextTheme" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
</resources>